<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background"
    android:stretchColumns="*"
    android:id="@+id/mainLayout"
    >

    <!-- Title with gradient and shadow -->
    <TextView
        android:id="@+id/glovelingoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Glovelingo"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:textColor="@drawable/background_anim"

        android:shadowColor="#55000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Glovelingo"
        android:titleTextColor="#FFFFFF"
        android:background="@color/primaryTeal"
        android:elevation="4dp" />

    <!-- Choose language text -->
    <TextView
        android:id="@+id/chooseLanguageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Language"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:textColor="@color/textPrimary"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>

    <!-- Language Buttons -->
    <Button
        style="@style/GloveButton"
        android:id="@+id/englishButton"
        android:text="English" />

    <Button
        style="@style/GloveButton"
        android:id="@+id/arabicButton"
        android:text="Arabic" />

    <Button
        style="@style/GloveButton"
        android:id="@+id/frenchButton"
        android:text="French" />

    <!-- About Section -->
    <TextView
        android:id="@+id/aboutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="About the app: Glovelingo is designed to help you learn sign language in various languages."
        android:textSize="14sp"
        android:paddingTop="12dp"
        android:textColor="@color/textPrimary"
        android:fontFamily="@font/poppins"/>

    <!-- Top 5 Button -->
    <Button
        style="@style/GloveButton"
        android:id="@+id/top5Button"
        android:text="Top 5 Organizations" />

    <!-- Description Button -->
    <Button
        style="@style/GloveButton"
        android:id="@+id/descriptionButton"
        android:text="Description" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text=""
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:textColor="@color/textPrimary"
        android:fontFamily="@font/poppins"/>

    <!-- Manual Button & Description Side by Side -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/manualButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/manualDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual description"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:layout_marginStart="12dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>

</TableLayout>
